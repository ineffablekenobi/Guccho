<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Guccho</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark p-4 shadow-lg rounded">
        <div class="container">
            <a class="navbar-brand" @Html.ActionLink("Guccho", "Index", "Home")>Guccho</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" @Html.ActionLink("About", "About", "Home")>About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Contact", "Contact", "Home")>Contact</a>
                    </li>

   
                </ul>
                
            </div>
        </div>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>

</html>

<div class="container body-content1 ">
    @RenderBody()
    <div "
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Guccho | All Rights Reserved</p>
    </footer>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

